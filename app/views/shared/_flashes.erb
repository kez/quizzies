<%- flash.each do |name, msg| -%>
              <% css_class = name == 'danger' ? 'bg-red-100 border-red-500 text-red-700' : 'bg-blue-100  border-blue-500 text-blue-700' %>
              <div class="<%= css_class %> border-l-4 p-4 mb-2" role="alert">
                  <%= content_tag :p,
                                  msg.humanize,
                                  id: "flash_#{name}" if msg.is_a?(String) %>
              </div>
            <%- end -%>