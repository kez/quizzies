<% content_for(:html_title) { "Quizzies - quick quizzes on key 11+ topics" } %>
<div>
  <section class='prose prose-lg prose-inter'>
    <h1 class='font-nunito-black'>11+ Quizzes</h1>
    <p>Test your knowledge with our 11+ quizzies.  Short quizes on the various topics with instant feedback.</p>
    <h2 class='font-nunito-black'>Choose an 11+ topic to get started</h2>
    <div class='grid md:grid-cols-2 gap-4'>
      <% @super_topic.topics.each_with_index do |topic, index| %>
        <% next if topic.parent_topic_id.present? %>
        <a href='/quiz/<%= @super_topic.key %>/<%= topic.key %>' class='font-nunito animate-in fade-in zoom-in btn  btn-hand btn-secondary text-white text-xl'><%= topic.title %></a>
      <% end %>
    </div>


  <% if @recent_quizzes.size.positive? %>
  <h2 class='font-nunito-black'>Your recent quizzes</h2>
    <% @recent_quizzes.each do |quiz| %>
    <% next unless quiz.topic %>
    <li>
      <div class='flex gap-x-2 items-center'>
        <div><%= link_to quiz.topic.title, quiz_path(quiz) %></div>
        <div class='text-gray-300 text-sm'><%= quiz.created_at.strftime('%d %b') %></div>
        <div class='badge badge-outline <%= quiz.finished? ? 'badge-success' : 'badge-neutral'%>'><%= quiz.finished? ? "Finished" : "Unfinished" %></div>
        
        </li>
    <% end %>
    <% end %>
  </section>


</div>
